<% if current_user %>
  <%= form_for(current_user.relationships.build, remote: true) do |f| %>
    <div><%= hidden_field_tag :followed_id, @ticket.id %></div>
    <%= f.submit "Follow", class: "btn btn-primary" %>
  <% end %>
<% else %> <%= link_to "Follow", new_user_session_path, class: "btn btn-primary"  %>
<% end %>
= render 'search_table'
- unless @searched_user.nil?
  %div.panel.panel-default.panel-table
    %div.panel-heading
      %div.row
        %div.col.col-xs-6
          %h3.panel-title
            = @searched_user.name
            's tickets
%div.panel-body
  %table.table.table-striped.table-bordered.table-list
    %h5
      Sort by:
      = sortable('activated_at', 'latest', 'tickets')
      = sortable('price', 'price', 'tickets')
    %tbody
  = render 'admin/tickets/ticket_columns'

= render 'searches/simple_search'
%div.cat
  - @categories.each do |main|
    %div.btn.btn-default
      %table
        %thead
          %tr
            %td.centert(colspan = "#{main.subcategories.count}")
              = link_to main.text, admin_category_path(main)
        %tbody
          %tr
            - main.subcategories.each do |subcategory|
              %td.centert 
                = link_to subcategory.text, admin_category_path(subcategory)
              
          
      
  = link_to 'Add category', new_admin_category_path, class: "btn btn-default"
%h3 LATEST TICKETS
= render 'admin/tickets/ticket_columns'

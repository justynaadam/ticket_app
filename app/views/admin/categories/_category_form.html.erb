<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for ([:admin, @category]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
       
      <%= f.label :text %>
      <%= f.text_field :text, autocomplete: "on" , class: 'form-control' %>
       <br>
      <%= f.label :main %>
      <%= f.collection_select(:main_id, Category.where(main_id: nil).all, :id, :text, include_blank: true) %>

      <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
      <% end %>